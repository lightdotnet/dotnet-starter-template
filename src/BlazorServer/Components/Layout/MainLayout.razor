@inherits LayoutComponentBase

<FluentToastProvider />
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider />
<FluentMenuProvider />
<FluentDesignTheme OfficeColor="OfficeColor.Default" StorageName="@WebConstants.THEME_STORAGE_NAME" />

<Spinner />

<AuthorizeView>
    <Authorized>
        <FluentLayout>
            <FluentHeader>
                BlazorServer

                <FluentStack HorizontalAlignment="@HorizontalAlignment.End" VerticalAlignment="@VerticalAlignment.Center">

                    <div class="settings">
                        <Light.FluentBlazor.Settings.SiteSettings />
                    </div>

                    <UserMenu />

                </FluentStack>

            </FluentHeader>
            <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
                <NavMenu />
                <FluentBodyContent Class="body-content">
                    <div class="content" style="padding: 1rem 2rem;">
                        @Body
                    </div>
                </FluentBodyContent>
            </FluentStack>
            <FluentFooter>
                <a href="https://www.fluentui-blazor.net" target="_blank">Documentation and demos</a>
                <FluentSpacer />
                <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor" target="_blank">About Blazor</a>
            </FluentFooter>
        </FluentLayout>
    </Authorized>
    <NotAuthorized>
        @Body
    </NotAuthorized>
</AuthorizeView>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
