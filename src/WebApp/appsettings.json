{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Hangfire": "Warning",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Hangfire": "Warning",
        "Microsoft": "Error",
        "System": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "FileAsync"
      }
    ]
  },
  "RequestLogging": {
    "Enable": true,
    "IncludeRequest": false,
    "IncludeResponse": false,
    "ExcludePaths": [ "hc" ]
  },
  "ApiUrls": {
    //"BackendApi": "http://localhost:5000/api/v1/"
    "BackendApi": "http://localhost:8080/api/v1/" // IIS
  }
}
