@page "/tokens"
@using QRCoder

<PageHeader Title="User Tokens" />

<Table State="state">
    <HeadContent>
        <th>Id</th>
        <th>Device</th>
        <th></th>
    </HeadContent>
    <RowTemplate>
        <td>@context.Id</td>
        <td>@(string.IsNullOrEmpty(context.DeviceId) ? "Unknown device" : $"{context.DeviceId} {context.DeviceName}")</td>
        <td>
            Revoke
        </td>
    </RowTemplate>
</Table>

@code {

    private DataTable<UserTokenDto> state = null!;

    protected override async Task OnInitializedAsync()
    {
        state = new(UserProfileService.GetTokensAsync);
        await state.ReloadAsync();
    }
}
