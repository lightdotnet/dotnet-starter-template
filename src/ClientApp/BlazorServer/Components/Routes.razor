<Router AppAssembly="typeof(Program).Assembly" AdditionalAssemblies="new[] { typeof(BlazorComponents).Assembly }">
    <Found Context="routeData">

        <RouteView RouteData="routeData" DefaultLayout="typeof(MainLayout)" />

        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>

    <NotFound>
        @*
                <PageTitle>Not found</PageTitle>
                <LayoutView Layout="@typeof(MainLayout)">
                    <p class="text-danger">Sorry, there's nothing at this address.</p>
                </LayoutView>
                *@
        <RedirectToHome />
    </NotFound>
</Router>